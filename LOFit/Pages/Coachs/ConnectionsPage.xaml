<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:model="clr-namespace:LOFit.Models"
             x:Class="LOFit.Pages.Coachs.ConnectionsPage"
             Title="Klienci">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Wybierz trenera" Clicked="OnCoachsClicked" Order="Primary"/>
        <ToolbarItem Text="MÃ³j profil" Clicked="OnProfileClicked" Order="Secondary" />
        <ToolbarItem Text="Ustawienia" Clicked="OnSettingsClicked" Order="Secondary"/>
        <ToolbarItem Text="Wyloguj" Clicked="OnLogoutClicked" Order="Secondary"/>
    </ContentPage.ToolbarItems>

    <CollectionView x:Name="collectionView" SelectionMode="Single" SelectionChanged="OnConnectionClicked">

        <CollectionView.ItemTemplate>

            <DataTemplate x:DataType="model:ConnectionModel">

                <Grid HorizontalOptions="Fill" VerticalOptions="Start">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*" />
                        <ColumnDefinition Width="1*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="2" />
                    </Grid.RowDefinitions>

                    <Label Grid.Column="0" Grid.Row="0" Grid.RowSpan="4" Text="JPG" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" Background="{StaticResource MyTextLight}" Margin="0,0,5,0"/>

                    <Label Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Text="{Binding Id_usera}" FontSize="40" Margin="0,0,0,5" />

                    <Label Grid.Column="1" Grid.Row="1" Text="Zatwierdzone: " />
                    <Label Grid.Column="2" Grid.Row="1" Text="{Binding Zatwierdzone}"  />

                    <Label Grid.Column="1" Grid.Row="2" Text="Czas od: " />
                    <Label Grid.Column="2" Grid.Row="2" Text="{Binding Czas_od}"  />

                    <Label Grid.Column="1" Grid.Row="3" Text="do: " />
                    <Label Grid.Column="2" Grid.Row="3" Text="{Binding Czas_do}"   />


                </Grid>
            </DataTemplate>

        </CollectionView.ItemTemplate>

    </CollectionView>

</ContentPage>